worker_processes  1;
error_log /var/vcap/sys/log/nginx/error.log   info;

events {
  worker_connections  1024;
}

http {
  default_type  application/octet-stream;
  sendfile        on;
  keepalive_timeout  65;
  server_names_hash_bucket_size 64;

  server {
      listen 80;
      server_name <%= p('server_name') %>;
      return 301 https://$server_name$request_uri;
  }

  server {
    listen 80;

    listen 443 ssl;
    server_name <%= p('server_name') %>;
    ssl_certificate /var/vcap/jobs/nginx/etc/ssl.crt;
    ssl_certificate_key /var/vcap/jobs/nginx/etc/ssl.key;
    ssl_protocols TLSv1.2;
    ssl_prefer_server_ciphers on;

    ssl_ciphers 'EECDH+AES128:EDH+AES128';

    add_header Strict-Transport-Security max-age=31536000;

    access_log /var/vcap/sys/log/nginx/server-access.log;
    error_log /var/vcap/sys/log/nginx/server-error.log;

    location / {
      proxy_pass http://localhost:8080;
    }
  }
}
